// Static navbar
-var menu = { 'Home': '/', 'Projects': '/#projects' };

nav.navbar.navbar-custom.navbar-fixed-top.navbar-inverse(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Crespum
    .navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-right
        each val, key in menu
          li
            if nav_selected === key
              li.active
                a(href=val)= key
            else
              li
                a(href=val)= key