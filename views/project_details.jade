extends layout
block vars
  -var nav_selected = 'Projects'; //default
  -var nav_style = 'light';

block content
  -var media_path = "/images/projects/";
  header#img-header
      img(style='background-image: url(' + media_path + project.media.img_mini +');')
      .row#title
        .col-md-6.col-md-offset-3
          h1= title
  section#company_details
    .container
      .row
        .col-md-8.col-md-offset-2
          .col-md-6
            img(src=media_path+project.media.img_logo)
           .col-md-6
            p
              span.fa.fa-clock-o
              if(project.activity_period.active)
                = project.activity_period.start_date+" - present"
              else
                = project.activity_period.start_date+" - "+project.activity_period.completition_date
            p
              span.fa.fa-link
              a(href=project.links.company_web)= project.links.company_web
            p
              span.fa.fa-hashtag
              each val, index in project.technologies
                if (project.technologies.length != index+1)
                  = val+", "
                else
                  = val
  section#project_details
    .container
      .row
        .col-md-8.col-md-offset-2
          h1.title Details
          p= project.description
          h1.title Media
          .row
            each val in project.media.img_list
              .col-md-4.col-xs-6.cover-card(style='background-image: url(' + media_path + val +');')
                p
                  span.fa.fa-search-plus.fa-2x
          h1.title Blog posts
